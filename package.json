    "watch": "pnpm run clean && pnpm run watch -r --parallel",
    "test": "pnpm run test -r",
    "test:watch": "pnpm run test:watch -r"
  },
  "keywords": [
    "solidjs",
    "use",
    "hooks"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@types/node": "^17.0.24",
    "c8": "^7.11.0",
    "esno": "^0.14.1",
    "jsdom": "^19.0.0",
    "typescript": "^4.6.3",
    "vite-plugin-solid": "^2.2.6",
    "vitest": "^0.9.3"
  }
}
