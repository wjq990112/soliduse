{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "watch": {
      "cache": false,
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["clean", "^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["clean", "^build"],
      "inputs": ["src/**"]
    },
    "test:watch": {
      "cache": false,
      "inputs": ["src/**"]
    }
  }
}
